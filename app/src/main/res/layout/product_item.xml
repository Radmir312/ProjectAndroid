<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#474545"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="115dp"
        android:layout_height="115dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        />

    <TextView
        android:id="@+id/titleProduct"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:text="Название: Dead Space"
        android:textColor="@color/white"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/priceProduct"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/titleProduct"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="88dp"
        android:layout_marginRight="20dp"
        android:text="Цена: 350 руб"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/countProduct"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/imgProduct"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="140dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Количество: 10 ключей"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/infProduct"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Описание: Dead Space - это survival horror игра,разработанная компанией EA Redwood Shores и выпущенная в 2008 году. Действие игры разворачивается в космосе на борту заброшенного космического корабля USG Ishimura, где главный герой, инженер Исаак Кларк, пытается спасти свою команду и раскрыть тайны, связанные с загадочной инопланетной расой, известной как некроморфы."
        android:textColor="@color/white"
        android:background="#474545"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/countProduct"
        android:layout_marginTop="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/butProduct"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="В корзину"
        android:textSize="20sp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/infProduct"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="45dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

